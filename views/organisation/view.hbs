{{#with organisation}}
<h2>{{name}}</h2>

<div class="row">
	<div class="col-12 col-lg-3">
	</div>

	<div class="col-12 col-lg-6">
		<div class="card">
			<h3>Organisation Details</h3>

			<div class="input">
				<input type="text" id="name" name="name" placeholder="Name" value="{{name}}"/>
				<label for="name">Name</label>
			</div>

			<div class="input">
				<input type="text" id="slug" name="slug" placeholder="URL Slug" value="{{slug}}"/>
				<label for="slug">URL Slug</label>
			</div>

			<div class="input">
				<textarea id="description" name="description" placeholder="description">{{description}}</textarea>
				<label for="description">Description</label>
			</div>

			<button class="btn-default">Save</button>
		</div>
	</div>

	<div class="col-12 col-lg-3">
	</div>
</div>
{{/with}}
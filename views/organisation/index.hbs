<h2>Organisations</h2>

<div class="p-5 my-4 bg-default text-light rounded-3 text-center">
	<div class="container-fluid">
		<p class="mt-3 mb-3">Displaying all <b>{{organisations.length}}</b> Organisations on record <a href="new" class="btn btn-light ms-3">+ Add Organisation</a></p>

		<div class="form-group text-start">
			<label class="form-label" for="filter">Search</label>
			<input type="text" class="form-control" id="filter" placeholder="Search..." />
		</div>
	</div>
</div>

<div class="row text-center row-cols-1 row-cols-md-2 row-cols-lg-3">
	{{#each organisations}}
	<div class="col mb-3">
		<div class="card card-body">
			<p class="h4"><a class="text-reset text-decoration-none stretched-link" href="{{id}}/">{{name}}</a></p>
			<div class="label-container">
				<span class="badge bg-default text-light">{{type}}</span>
			</div>
		</div>
	</div>
	{{/each}}
</div>
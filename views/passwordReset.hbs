<h2>{{user.firstName}} {{user.surname}}</h2>

<div class="alert alert-warning text-center">You must change your password before continuing</div>

<div class="col mb-3">
	<div class="card card-body">
		<h3 class="text-center">Change Password</h3>
		{{#if nomatch}}
			<div class="alert alert-danger text-center">Passwords must match</div>
		{{/if}}
		<form action="/user/{{user.id}}/password" method="post">
			<label for="password">New Password</label>
			<input type="password" id="password" name="password" maxlength="72" class="form-control mb-3" required />

			<label for="confirm">Confirm Password</label>
			<input type="password" id="confirm" name="confirm" maxlength="72" class="form-control mb-3" required />

			<div class="text-center">
				<button class="btn btn-default">Update Password</button>
			</div>
		</form>
	</div>
</div>


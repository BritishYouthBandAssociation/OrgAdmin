<h2>Events</h2>

<div class='p-5 my-4 bg-default text-light rounded-3 text-center'>
	<div class='container-fluid'>
		<p class='mt-3 mb-3'>Displaying all <b>{{events.length}}</b> Events on record

		{{#if session.user.IsAdmin}}
		<a class='btn btn-light ms-lg-3 mt-3 mt-lg-0 d-block d-lg-inline' href='new'>+ Add Event</a></p>
		{{/if}}

		<div class='row mb-3 row-cols-1 row-cols-md-2 d-none'>
			<div class='col mb-3'>
				<div class='form-group text-start'>
					<label class='form-label' for='year'>Year</label>
					<select id='year' class='form-control'>
						{{#each years}}
						<option value='{{this}}' {{#eq this ../year }} selected{{/eq}}>{{this}}</option>
						{{/each}}
					</select>
				</div>
			</div>

			<div class='col mb-3'>
				<div class='form-group text-start'>
					<label class='form-label' for='search'>Search</label>
					<input id='search' class='form-control' placeholder='Search' />
				</div>
			</div>
		</div>

		<div class='row text-center justify-content-center row-cols-2 row-cols-md-4 row-cols-lg-6 d-none'>
			{{#each filters}}
			<div class='col mb-3'>
				<label class='form-label' for='filter_{{id}}'>
					<input type='checkbox' id='filter_{{id}}' value='{{id}}' checked />
					{{Name}}
				</label>
			</div>
			{{/each}}
		</div>
	</div>

</div>

<div class='row text-center'>
	{{#each events}}
	<div class='col-12 col-md-6 col-lg-4 mb-3'>
		<div class='card card-action' data-type='{{EventType.id}}'>
			<div class='card-body'>
				<p class='h4'><a href='{{id}}/' class='stretched-link text-reset text-decoration-none'>{{Name}}</a></p>
				<p>{{datetimeDelta Start End format='long'}}</p>
				<div><span class='badge {{#if MembersOnly}}bg-danger{{else}}bg-success{{/if}}'>{{#if MembersOnly}}Members Only{{else}}Open to all{{/if}}</span></div>
			</div>
			<div class='card-footer label-container'>
				{{#with EventType}}
				<span class='badge bg-default' data-type='{{id}}'>{{Name}}</span>
				{{/with}}
			</div>
		</div>
	</div>
	{{/each}}
</div>

<div class="p-5 my-4 bg-default text-light rounded-3 text-center">
	<div class="container-fluid">
		<h2>Membership</h2>

		<p class="mt-3 mb-3">Displaying all <b>{{membership.length}}</b> matching Memberships on record <a
				class="btn btn-light" href="new">+ Add Membership</a></p>

		<div class="row mb-3 row-cols-1 row-cols-md-2">
			<div class="col mb-3">
				<div class="form-group text-start">
					<label for="year">Season</label>
					<select id="year" class="form-control">
						{{#each seasons}}
						<option value="{{this}}" {{#eq this ../season }} selected{{/eq}}>{{this}}</option>
						{{/each}}
					</select>
				</div>
			</div>

			<div class="col mb-3">
				<div class="form-group text-start">
					<label for="search">Search</label>
					<input id="search" class="form-control" placeholder="Search" />
				</div>
			</div>
		</div>

		<div class="row text-center justify-content-center row-cols-2 row-cols-md-4 row-cols-lg-6">
		{{#each filters}}
		<div class="col mb-3">
			<label for="filter_{{id}}"><input type="checkbox" id="filter_{{id}}" value="{{id}}" checked />
				{{text}}</label>
		</div>
		{{/each}}
	</div>
	</div>

</div>

<div class="row text-center">
	{{#each membership}}
	<div class="col-12 col-md-6 col-lg-4">
		<div class="card card-action" data-type="{{type.id}}">
			<div class="card-body">
				<p class="h4"><a href="{{id}}" class="stretched-link text-reset text-decoration-none">{{name}}</a></p>
			</div>

			<div class="card-footer label-container">
				{{#each labels}}
				<span class="badge" style="background-color: {{background}}; color: {{foreground}}"
					data-type="{{id}}">{{text}}</span>
				{{/each}}
			</div>
		</div>
	</div>
	{{/each}}
</div>
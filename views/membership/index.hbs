<h2>Membership</h2>

<div class="p-5 my-4 bg-default text-light rounded-3 text-center">
	<div class="container-fluid">
		<p class="mt-3 mb-3">Displaying all <b>{{membership.length}}</b> matching Memberships on record <a
				class="btn btn-light ms-3" href="new">+ Add Membership</a></p>

		<div class="row mb-3 row-cols-1 row-cols-md-2">
			<div class="col mb-3">
				<div class="form-group text-start">
					<label class="form-label" for="year">Season</label>
					<select id="year" class="form-control">
						{{#each seasons}}
						<option value="{{this}}" {{#eq this ../Season }} selected{{/eq}}>{{this}}</option>
						{{/each}}
					</select>
				</div>
			</div>

			<div class="col mb-3">
				<div class="form-group text-start">
					<label class="form-label" for="search">Search</label>
					<input id="search" class="form-control" placeholder="Search" />
				</div>
			</div>
		</div>

		<div class="row text-center justify-content-center row-cols-2 row-cols-md-4 row-cols-lg-6">
			{{#each filters}}
			<div class="col mb-3">
				<label class="form-label" for="filter_{{id}}">
					<input type="checkbox" id="filter_{{id}}" value="{{id}}" checked />
					{{Name}}
				</label>
			</div>
			{{/each}}
		</div>
	</div>

</div>

<div class="row text-center">
	{{#each membership}}
	<div class="col-12 col-md-6 col-lg-4 mb-3">
		<div class="card card-action h-100 mb-3" data-type="{{MembershipType.id}}">
			<div class="card-body">
				<p class="h4"><a href="{{id}}" class="stretched-link text-reset text-decoration-none">{{Name}}</a></p>
			</div>

			<div class="card-footer label-container">
				{{#each Labels}}
				<span class="badge" style="background-color: {{BackgroundColour}}; color: {{ForegroundColour}}"
					data-type="{{id}}">{{Name}}</span>
				{{/each}}
			</div>
		</div>
	</div>
	{{/each}}
</div>

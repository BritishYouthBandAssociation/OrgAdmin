<div class="jumbotron text-center">
	<h2>Membership</h2>

	<p class="mt-3 mb-3">Displaying all <b>{{membership.length}}</b> matching Memberships on record <a
			class="btn-default">+ Add Membership</a></p>

	<div class="row">
		<div class="col-12 col-md-6">
			<div class="input">
				<select id="year">
					{{#each seasons}}
					<option value="{{this}}" {{#eq this ../season }} selected{{/eq}}>{{this}}</option>
					{{/each}}
				</select>
				<label for="year">Season</label>
			</div>
		</div>

		<div class="col-12 col-md-6">
			<div class="input">
				<input id="search" placeholder="Search" />
				<label for="search">Search</label>
			</div>
		</div>
	</div>

	<div class="row text-center">
		{{#each filters}}
		<div class="col-6 col-md-4 col-lg-2">
			<label for="filter_{{id}}"><input type="checkbox" id="filter_{{id}}" value="{{id}}" checked />
				{{text}}</label>
		</div>
		{{/each}}
	</div>

</div>

<div class="row text-center">
	{{#each membership}}
	<div class="col-12 col-md-6 col-lg-4">
		<div class="card card-action" data-type="{{type.id}}">
			<div class="card-body">
				<p class="h4"><a href="{{id}}">{{name}}</a></p>
			</div>

			<div class="label-container">
				{{#each labels}}
				<span class="label" style="background-color: {{background}}; color: {{foreground}}"
					data-type="{{id}}">{{text}}</span>
				{{/each}}
			</div>
		</div>
	</div>
	{{/each}}
</div>
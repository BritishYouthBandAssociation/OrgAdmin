<h2>Users</h2>

<div class="p-5 my-4 bg-default text-light rounded-3 text-center">
	<div class="container-fluid">
		<p class="mt-3 mb-3">Displaying all <b>{{total}}</b> users on record <a
				class="btn btn-light ms-lg-3 mt-3 mt-lg-0 d-block d-lg-inline" href="new">+ Add User</a></p>

		<div class="form-group text-start d-none">
			<label class="form-label" for="filter">Search</label>
			<input type="text" class="form-control" id="filter" placeholder="Search..." />
		</div>
	</div>
</div>

<div class="row text-center">
	{{#each active}}
	<div class="col-12 col-md-6 col-lg-4 mb-3">
		<div class="card card-action h-100">
			<div class="card-body position-relative">
				<p class="h4"><a href="{{id}}/" class="stretched-link text-reset text-decoration-none">{{FirstName}} {{Surname}}</a></p>
				<p>{{Email}}</p>
				{{#if IsAdmin}}
					<span class="badge bg-default">Admin</span>
				{{/if}}
			</div>
			<div class="card-footer">
				{{> audit-small createdAt=createdAt createdBy=CreatedBy updatedAt=updatedAt updatedBy=UpdatedBy}}
			</div>
		</div>
	</div>
	{{/each}}
</div>

{{#if inactive.length}}
<hr class="my-3" />

<h2>Inactive Users</h2>
<div class="row text-center">
	{{#each inactive}}
	<div class="col-12 col-md-6 col-lg-4">
		<div class="card card-action h-100 mb-3">
			<div class="card-body position-relative">
				<p class="h4"><a href="{{id}}" class="stretched-link text-reset text-decoration-none">{{FirstName}} {{Surname}}</a></p>
				<p>{{Email}}</p>
				{{#if IsAdmin}}
					<span class="badge bg-default">Admin</span>
				{{/if}}
			</div>
			<div class="card-footer">
				{{> audit-small createdAt=createdAt createdBy=CreatedBy updatedAt=updatedAt updatedBy=UpdatedBy}}
			</div>
		</div>
	</div>
	{{/each}}
</div>
{{/if}}